@import 'variables'

button_styles(class, base_color)
    &.btn-{class}
        background: base_color
        border-color: darken(base_color, 20%)
        &:hover
            background: darken(base_color, 15%)

.btn
    border: 1px solid gray
    background: white
    border-radius: 3px
    display: inline-block
    color: white
    cursor: pointer
    margin-right: 5px
    margin-bottom: 5px
    padding: 4px 8px
    text-transform: upper-case
    font-size: $base_font_size
    font-weight: normal
    text-decoration: none
    box-sizing: border-box
    text-align: center
    transition: background 0.2s linear
    background: lighten(gray, 35%)
    &:hover
        background: gray
        color: white
    button_styles('primary', #6CC5FD)
    button_styles('success', $good_color)
    button_styles('danger', $good_color)
    button_styles('warning', $neutral_color)

    &.fill
        width: 100%
        margin-right: 0
    &.large
        padding: 8px 14px
        font-size: $base_font_size + 6px
