@import 'variables'
@import 'h5bp'
@import 'buttons'
@import 'nib/gradients'

html
    height: 100%

body
    // background: #25382F
    // color: rgba(white, 0.7)
    font-family:   "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
    font-weight: 300
    font-size: $base_font_size
    margin: 0
    padding: 0
    height: 100%

    // slide everything to the left when menu is open
    &.menu-open
        #page-wrapper
        #main-menu
           transform: translate3d(-($nav_width), 0px, 0px)

// All the stuff to do with making the slide out menu snazzy
#page-wrapper
    // min-height: 100%
    overflow-x: hidden
    position: relative
    right: 0
    transition: all $nav_transition_duration ease
    transform: translate3d(0px, 0px, 0px)

#main-menu
    height: 100%
    position: fixed
    z-index: $menu_zindex
    top: 0
    background: linear-gradient(left, rgba(black, 0.1) 0%, rgba(black, 0) 15%), linear-gradient(top right, #746E70, #53616D)
    width: $nav_width
    right: -($nav_width)
    transform: translate3d(0px, 0px, 0px)
    transition: all $nav_transition_duration ease
    // border-left: 2px solid $good_color
    user-select: none
    ul
        margin-top: $menu_height + 1px
        li
            a
                display: block
                padding: 5px 10px
                text-align: right
                font-weight: 400
                text-decoration: none
                text-transform: uppercase
                letter-spacing: 1px
                transition: letter-spacing 0.1s ease, background-color 0.4s ease
                color: white
                text-shadow: 0 1px 3px rgba(0,0,0,0.4)
                background-color: transparent
                &:hover
                    letter-spacing: 2px
                    background-color: rgba($good_color, 0.4)
            &.active
                a
                    background-color: $good_color

#menu-toggle
    position: absolute
    width: $menu_height
    height: $menu_height
    top: 0
    right: 0
    display: block
    line-height: $menu_height
    cursor: pointer
    z-index: $menu_zindex + 10
    color: white
    text-decoration: none
    font-size: 50px
    user-select: none
    .lines
        display: block
        position: relative
        top: -3px
        left: 0
        transition: color 0.3s ease, left 0.3s ease
        &:before
        &:after
            content: 'â€“'
            display: block
            font-weight: 300
            position: absolute
            left: 0
            top: -6px
            transition: transform 0.3s ease, color 0.3s ease
            transform-origin: 4px 24px
        &:after
            top: 6px
        .menu-open &
            color: rgba($bad_color, 0)
            left: 7px
            &:before
            &:after
                color: $bad_color
            &:before
                transform: rotate(45deg)
            &:after
                transform: rotate(-45deg)
            // &:hover


#page-wrapper header
    height: $menu_height
    background: gray
    border-bottom: 1px solid black
    padding: 0 10px
    h1
        margin: 0
        font-size:  $base_font_size + 3px
        line-height: $menu_height

.card-group
    .card
        margin: 0 10px 10px
        // border: 1px solid main_border
        box-sizing: border-box
        background: #4F5E6A
        // background: linear-gradient(top right, #746E70, #53616D)
        overflow: hidden
        .card-header
            border-bottom: 1px solid main_border
            padding: 0 card_padding
            overflow: hidden
            h3
                font-weight: 100
                letter-spacing: 1px
        .card-body
            display: table
            width: 100%
            min-height: 250px
            text-align: center
        .sentiment-bars
            display: table-row
            min-height: 250px
            margin: 0
            padding: 0
            width: 100%
            li
                list-style: none
                display: table-cell
                border-right: 1px solid main_border
                position: relative
                &:last-child
                    border: none

                .score-container
                .icon
                .score
                .score-bar
                    transition: all 0.3s ease
                .score-container
                    display: block
                    position: absolute
                    top: 0
                    right: 0
                    bottom: 0
                    left: 0
                    background: transparent
                    cursor: pointer
                    box-shadow: 0 0 0 rgba(0,0,0,0)
                    z-index: 100

                .icon
                    display: block
                    width: 30px
                    height: 30px
                    position: absolute
                    background: rgba(gray, 0.6)
                    margin-left: -(@width/2)
                    left: 50%
                    top: 20px
                    border-radius: 100px

                .score
                    font-size: 1.6em
                    top: 60px
                    position: relative
                    opacity: 0

                .score-bar
                    position: absolute
                    top: 60px
                    right: 0
                    bottom: 0
                    left: 0
                    z-index: 80
                    .bar
                        position: absolute
                        right: 0
                        bottom: 0
                        left: 0
                        z-index: 90
                        box-shadow: inset 0 -3px 7px rgba(0,0,0,0.3)
                .score-container
                    &.good
                        .score
                            color: #37D7B2
                        .bar
                            background: #37D7B2
                    &.bad
                        .score
                            color: #F86C5F
                        .bar
                            background: #F86C5F
                    &.fair
                        .score
                            color: #EBC355
                        .bar
                            background: #EBC355
                &:hover
                    .score-container
                        z-index: 110
                        // how much we pull into the header
                        top: -55px
                        background: darken(white, 10%)
                        background: white
                        box-shadow: 17px -1px 58px rgba(0,0,0,0.3)
                    .score-bar
                        // how much we strink the score bar when the container expands
                        top: 85px
                    .icon
                        width: 50px
                        height: 50px
                        margin-left: -(@width/2)
                        top: 10px
                        &:after
                            content: ', ,'
                            display: block
                            color: white
                            width: 60px
                            height: 20px
                            font-size: 73px
                            position: absolute
                            top: -86px
                    .score
                        opacity: 1
