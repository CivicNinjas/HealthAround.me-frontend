.feedback-button-area
    padding: 10px 0

social_icon_size = 80px
.social-share
    padding: 20px 0
    text-align: center
    > a
        display: inline-block
        width: social_icon_size
        height: social_icon_size
        border-radius: 6px
        background: grey
        margin-right: 20px
        color: white
        overflow: hidden
        text-indent: -600em
    .facebook
        background: #204385
        background-image: url("data:image/png;base64,")
        background-position: 69% bottom
        background-repeat: no-repeat
    .twitter
        background: #2aa9e0
        background-image: url("data:image/png;base64,")
        background-position: center center
        background-repeat: no-repeat

