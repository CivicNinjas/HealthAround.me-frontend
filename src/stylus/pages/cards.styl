@import 'variables'
// .card-group
.card
    margin: 0 0 10px
    // border: 1px solid main_border
    box-sizing: border-box
    background: #4F5E6A
    // background: linear-gradient(top right, #746E70, #53616D)
    overflow: hidden
    max-width: 450px
    .card-header
        border-bottom: 1px solid main_border
        padding: 0 card_padding
        overflow: hidden
        h3
            font-weight: 100
            letter-spacing: 1px
            color: white
            margin: 10px 0
    .card-body
        display: table
        width: 100%
        min-height: 250px
        text-align: center
    .sentiment-bars
        display: table-row
        min-height: 250px
        margin: 0
        padding: 0
        width: 100%
        li
            list-style: none
            display: table-cell
            border-right: 1px solid main_border
            position: relative
            &:last-child
                border: none

            .score-container
            .icon
            .score
            .score-bar
                transition: all 0.3s ease
            .score-container
                display: block
                position: absolute
                top: 0
                right: 0
                bottom: 0
                left: 0
                background: transparent
                cursor: pointer
                box-shadow: 0 0 0 rgba(0,0,0,0)
                z-index: 100

            .icon
                display: block
                width: 30px
                height: 30px
                position: absolute
                background: rgba(gray, 0.6)
                margin-left: -(@width/2)
                left: 50%
                top: 20px
                border-radius: 100px

            .score
                font-size: 1.6em
                top: 60px
                position: relative
                opacity: 0

            .score-bar
                position: absolute
                top: 60px
                right: 0
                bottom: 0
                left: 0
                z-index: 80
                .bar
                    position: absolute
                    right: 0
                    bottom: 0
                    left: 0
                    z-index: 90
                    box-shadow: inset 0 -3px 7px rgba(0,0,0,0.3)
            .score-container
                &.a-score
                    .score
                        color: $good_color
                    .bar
                        background: $good_color
                &.b-score
                &.c-score
                    .score
                        color: $neutral_color
                    .bar
                        background: $neutral_color
                &.f-score
                &.d-score
                    .score
                        color: $bad_color
                    .bar
                        background: $bad_color
            &.active
            &:hover
                .score-container
                    z-index: 110
                    // how much we pull into the header
                    top: -35px
                    background: darken(white, 10%)
                    background: white
                    box-shadow: 17px -1px 58px rgba(0,0,0,0.3)
                .score-bar
                    // how much we strink the score bar when the container expands
                    top: 85px
                .icon
                    width: 50px
                    height: 50px
                    margin-left: -(@width/2)
                    top: 10px
                .score
                    opacity: 1
